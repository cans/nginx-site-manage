server {
    server_name _ ;
    listen 80 default_server;
    listen [::]:80 default_server;

    return 301 https://{{item.default_redirect}}$request_uri

    root /var/www/html;
    location / {
        redirect
        try_files $uri $uri/ =404;
    }
}

server {
    server_name _ ;
    listen 443 default_server ssl ;
    listen [::]:443 default_server ssl ;
    
    ssl_certificate {{ item.tls_certificate }} ;
    ssl_certificate_key {{ item.tls_private_key ;
    ssl_protocols {{ item.tls_protocols }} ;
    ssl_cyphers '{{ item.tls_cyphers }}' ;
{% if item.tls_enforce_server_cyphersuite %}
    ssl_prefer_server_ciphers on ;
{% endif %}
    root /var/www/html;

    # Add index.php to the list if you are using PHP
    index index.html index.htm index.nginx-debian.html;

    location / {
        # First attempt to serve request as file, then
        # as directory, then fall back to displaying a 404.
        try_files $uri $uri/ =404;
    }
}
